[colors]
color-0 = #20d3df
[bar/top]
bottom=false
modules-left=bspwm
modules-right=root cpu memory battery date time
module-margin=1
background= #d0303030
tray-position = right
font-0 = Hack:weight=medium:pixelsize=12;3
font-1 = Symbols Nerd Font;3
wm-restack = bspwm
padding = 1

[module/bspwm]
type=internal/bspwm
label-empty =
label-focused = %index% %icon%
label-focused-foreground = ${colors.color-0}
label-occupied = %index% %icon%

[module/time]
type=internal/date
time = %H:%M
interval=5
label = %time:6%
format-prefix =
format-prefix-foreground = ${colors.color-0}

[module/date]
type=internal/date
date=%d %b %y
label = %date:10%
format-prefix =
format-prefix-foreground = ${colors.color-0}

[module/memory]
type = internal/memory
format-prefix =
format-prefix-foreground = ${colors.color-0}
label = %percentage_used:3%%

[module/cpu]
type = internal/cpu
label = %percentage:3%%
format-prefix = 
format-prefix-foreground = ${colors.color-0}

[module/root]
type = internal/fs
mount-0 = /
label-mounted = %free%
format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.color-0}

[module/battery]
type = internal/battery
